{
    "fmt": {
        "include": ["**/*.ts"],
        "lineWidth": 80,
        "indentWidth": 2,
        "singleQuote": true
    },
    "lint": {
        "include": ["**/*.ts"]
    },
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strict": true,
        "strictNullChecks": true
    }
}
